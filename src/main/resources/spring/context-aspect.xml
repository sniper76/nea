<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:aop="http://www.springframework.org/schema/aop"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
        http://www.springframework.org/schema/aop http://www.springframework.org/schema/aop/spring-aop-4.0.xsd">

	<bean id="logging" class="ony.framework.LoggingAspect"/>

	<aop:config>
		<aop:aspect id="serviceAspect" ref="logging">
		    <aop:pointcut id="serviceMethod" expression="execution(public * ony.cpes.internal.service.impl.*.*(..))" />
			<aop:after-throwing pointcut-ref="serviceMethod" method="throwLogging" throwing="ex" />
			<aop:around pointcut-ref="serviceMethod" method="loggingService" />
		</aop:aspect>
	</aop:config>

	<aop:config>
		<aop:aspect id="daoAspect" ref="logging">
		<aop:pointcut id="daoMethod" expression="execution(public * ony.cpes.internal.dao.*.*(..))" />
			<aop:after-throwing pointcut-ref="daoMethod" method="throwLogging" throwing="ex" />
			<aop:around pointcut-ref="daoMethod" method="loggingDAO" />
		</aop:aspect>
	</aop:config>

	<bean id="exceptionTransfer" class="egovframework.rte.fdl.cmmn.aspect.ExceptionTransfer">
		<property name="exceptionHandlerService">
			<list>
				<ref bean="defaultExceptionHandleManager" />
				<ref bean="otherExceptionHandleManager" />
			</list>
		</property>
	</bean>

	<bean id="defaultExceptionHandleManager" class="egovframework.rte.fdl.cmmn.exception.manager.DefaultExceptionHandleManager">
		<property name="reqExpMatcher">
			<ref bean="antPathMater"/>
		</property>
		<property name="patterns">
			<list>
				<value>**service.impl.*</value>
			</list>
		</property>
		<property name="handlers">
			<list>
				<ref bean="egovHandler" />
			</list>
		</property>
	</bean>

	<bean id="otherExceptionHandleManager" class="egovframework.rte.fdl.cmmn.exception.manager.DefaultExceptionHandleManager">
		<property name="reqExpMatcher">
			<ref bean="antPathMater"/>
		</property>
		<property name="patterns">
			<list>
				<value>**service.impl.*</value>
			</list>
		</property>
		<property name="handlers">
			<list>
				<ref bean="otherHandler" />
			</list>
		</property>
	</bean>

	<bean id="egovHandler" class="ony.framework.cmmn.EgovComExcepHndlr" />
	<bean id="otherHandler" class="ony.framework.cmmn.EgovComOthersExcepHndlr" />


</beans>